<%= form_for @tutorial do |f| %>
  <% if @tutorial.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tutorial.errors.count, "error") %> prohibited
        this tutorial from being saved:
      </h2>
      <ul>
        <% @tutorial.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  
  <p>
	<%= f.label :tutorial_category, 'Category' %><br>
	<%= f.collection_select :tutorial_category_id, TutorialCategory.all, :id, :name %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
